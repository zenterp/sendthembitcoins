                            <ul class='oauth' style='list-style:none;'>
                              <li><i class="icon-facebook icon-large">Facebook</i></li>
                              <li><i class="icon-twitter icon-large">Twitter</i></li>
                              <li><i class="icon-linkedin icon-large">LinkedIn</i></li>
                              <li><i class="icon-github icon-large">Github</i></li>                              
                            </ul>
                          </div>
