    <div class="row" id="tables">
                        <div class="span6">
                            <h3>Gifts people sent to you via Twitter</h3>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Recipient</th>
                                        <th>Amount</th>
                                        <th>Sent At</th>
                                        <th>Claim</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @gifts.each do |gift| %>
                                    <tr>
                                        <td><%= gift.recipient_twitter_username %></td>
                                        <td><%= gift.bitcoin_amount %> btc</td>
                                        <td><%= gift.funded_at.strftime("%D at %H:%M:%S") %></td>
                                      
                                        <% if !gift.retrieved_at.nil? %>
                                        <td><%= gift.retrieved_at.strftime("%D at %H:%M:%S") %></td>                                      
                                        <% end %>

                                      <td><button class='btn btn-positive'>Claim Gift</button></td>

                                    </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div><!--span6-->
      
      
                        <div class="span6">
                          <div class='hero-unit' style='padding-top:10px'>
